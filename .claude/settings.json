{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "preferences": {
    "verbosity": "minimal",
    "codeOnly": true,
    "maxExplanationLines": 3
  },
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(npm test*)",
      "Bash(npm install*)",
      "Bash(npm audit*)",
      "Bash(npm outdated*)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(npx *)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git fetch*)",
      "Bash(git pull*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git checkout*)",
      "Bash(git merge*)",
      "Bash(git stash*)",
      "Bash(git tag*)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Bash(gh repo *)",
      "Bash(gh api *)",
      "Bash(pytest*)",
      "Bash(python -m pytest*)",
      "Bash(go test*)",
      "Bash(go build*)",
      "Bash(go mod*)",
      "Bash(cargo test*)",
      "Bash(cargo build*)",
      "Bash(cargo check*)",
      "Bash(make *)",
      "Bash(docker ps*)",
      "Bash(docker logs*)",
      "Bash(docker images*)",
      "Bash(docker build*)",
      "Bash(docker-compose *)",
      "Bash(kubectl get*)",
      "Bash(kubectl describe*)",
      "Bash(kubectl logs*)",
      "Bash(terraform plan*)",
      "Bash(terraform validate*)",
      "Bash(eslint *)",
      "Bash(prettier *)",
      "Bash(tsc *)",
      "Bash(mypy *)",
      "Bash(black *)",
      "Bash(ruff *)",
      "Read",
      "Glob",
      "Grep"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/credentials.json)",
      "Read(**/secrets.json)",
      "Read(**/.aws/credentials)",
      "Read(**/.ssh/*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(git push --force*)",
      "Bash(git push -f*)",
      "Bash(git reset --hard*)",
      "Bash(git clean -fd*)",
      "Bash(chmod 777 *)",
      "Bash(chmod -R 777*)",
      "Bash(curl * | bash)",
      "Bash(curl * | sh)",
      "Bash(wget * | bash)",
      "Bash(wget * | sh)",
      "Bash(sudo rm*)",
      "Bash(sudo chmod*)",
      "Bash(> /dev/*)",
      "Bash(kubectl delete*)",
      "Bash(docker rm -f*)",
      "Bash(terraform destroy*)",
      "Bash(cat */.env*)",
      "Bash(cat *.pem)",
      "Bash(cat *credentials*)"
    ]
  },
  "env": {
    "EDITOR": "code --wait",
    "GIT_EDITOR": "code --wait"
  }
}
